#!/bin/bash
# Wrapper for install.sh and uninstall.sh
# This ensures consistency between Manual, SetupHelper, and Blind installs.

ACTION="install"
if [ $# -gt 0 ]; then
    ACTION=$1
fi

case "$ACTION" in
    install|reinstall)
        # Ensure install.sh is executable
        chmod +x install.sh
        # Run the robust installer
        ./install.sh
        ;;
    uninstall)
        chmod +x uninstall.sh
        ./uninstall.sh
        ;;
    *)
        echo "Usage: $0 {install|uninstall}"
        exit 1
        ;;
esac

