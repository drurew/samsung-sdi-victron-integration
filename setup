#!/bin/bash

# Setup script for Samsung SDI Victron Integration
# Supports Install and Uninstall

# Default to install if no argument provided
ACTION="install"
if [ $# -gt 0 ]; then
    ACTION=$1
fi

packageName="samsung-sdi-victron-integration"
installPath="/data/$packageName"
serviceName="samsung-sdi-bms"
servicePath="/service/$serviceName"
logDir="/var/log/$serviceName"

# --- Helper Functions ---
log_message() {
    echo "$(date '+%Y-%m-%d %H:%M:%S') - $1"
}

install_package() {
    log_message "Installing $packageName..."

    # 1. Create installation directory
    if [ ! -d "$installPath" ]; then
        log_message "Creating directory $installPath"
        mkdir -p "$installPath"
    fi

    # 2. Copy files
    log_message "Copying files to $installPath"
    cp -r * "$installPath"
    
    # 3. Set permissions
    chmod +x "$installPath/samsung_sdi_bms_service.py"
    
    # 4. Install Service
    install_service
    
    log_message "Installation complete."
}

install_service() {
    log_message "Installing service $serviceName..."
    
    # Check if CAN interface is configured (Standard check from original install script)
    if [ ! -f "/etc/venus/can.conf" ]; then
        log_message "Checking CAN configuration..."
        # We don't force modify system files in a package setup generally, but we can warn or setup if safe.
        # Ideally, we assume user or another tool handles hardware config. 
        # But let's keep it simple for now and just set up the service.
    fi

    # Create service directory
    mkdir -p "$servicePath"
    
    # Create run script
    cat > "$servicePath/run" <<EOF
#!/bin/sh
exec 2>&1
cd $installPath
exec /usr/bin/python3 $installPath/samsung_sdi_bms_service.py
EOF
    chmod +x "$servicePath/run"
    
    # Create log directory and run script
    mkdir -p "$servicePath/log"
    mkdir -p "$logDir"
    
    cat > "$servicePath/log/run" <<EOF
#!/bin/sh
exec multilog t $logDir
EOF
    chmod +x "$servicePath/log/run"
    
    log_message "Service configured."
}

uninstall_package() {
    log_message "Uninstalling $packageName..."

    # 1. Remove Service
    if [ -d "$servicePath" ]; then
        log_message "Removing service $serviceName"
        rm -rf "$servicePath"
    fi
    
    # 2. Kill process if running
    pkill -f "python3 $installPath/samsung_sdi_bms_service.py" || true
    
    # 3. Remove files
    if [ -d "$installPath" ]; then
        log_message "Removing installation directory $installPath"
        rm -rf "$installPath"
    fi
    
    log_message "Uninstallation complete."
}

# --- Main Execution ---

case "$ACTION" in
    install|reinstall)
        install_package
        ;;
    uninstall)
        uninstall_package
        ;;
    *)
        echo "Usage: $0 {install|uninstall}"
        exit 1
        ;;
esac
